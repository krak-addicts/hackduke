<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ExerciseActivity" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="Exercise Activity"
            android:textColor="#000000"
            android:textSize="32sp" />
        
        <TextView
            android:id="@+id/choose_an_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:layout_below="@+id/title"
            android:text="Choose an exercise."
            android:textColor="#000000"
            android:textSize="20sp" />
        
        <Spinner
    		android:id="@+id/workout_spinner"
    		android:layout_below="@+id/choose_an_exercise"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content" />
        
         <TextView
            android:id="@+id/choose_duration_of_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/workout_spinner"
            android:text="Choose duration of exercise."
            android:textColor="#000000"
            android:textSize="20sp" />
        
        <Spinner
    		android:id="@+id/time_spinner"
    		android:layout_below="@+id/choose_duration_of_exercise"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content" />
        
        <Button
            android:id="@+id/toCalorie"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:onClick="toCalorie"
            android:text="Next"
            android:textColor="#000000"
            android:textSize="24sp" />

    </RelativeLayout>

</ScrollView>
